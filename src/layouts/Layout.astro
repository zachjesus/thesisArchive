---
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <div class="grid-container">
      <div class="sidebar-left"></div>
      <div class="main-content">
        <h1>{frontmatter.mainTitle}</h1>
        <slot />
      </div>
      <div class="sidebar-right"></div>
    </div>
  </body>
</html>

<style>
  @font-face {
    font-family: "DisplayFont";
    src: url("/fonts/NeueHaasGrotDispRound-55Roman.otf") format("opentype");
  }

  @font-face {
    font-family: "TextFont";
    src: url("/fonts/NeueHaasGrotTextRound-55Roman.otf") format("opentype");
  }

  html,
  body {
    margin: 0;
    width: 100vw;
    height: 100vh;
    font-family: "TextFont", sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: "DisplayFont", sans-serif;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 0.225fr 0.55fr 0.225fr;
    grid-template-rows: 1fr;
    height: 100%;
    width: 100%;
  }

  .main-content {
    background-color: rgb(255, 255, 255);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .sidebar-left {
    background-color: rgb(255, 255, 255);
    padding: 1rem;
  }

  .sidebar-right {
    background-color: rgb(255, 255, 255);
    padding: 1rem;
  }
</style>
